{{#each this}}
  <li class='film-card film-list__item' data-action='{{id}}' data-modal-open>

    <img
      class='film-card__img'
      src='https://image.tmdb.org/t/p/w500{{poster_path}}'
      alt='{{original_title}} '
      width='100%'
      data-id='{{imdb_id}}'
      onerror="this.onerror=null;this.src='https://ik.imagekit.io/tc8jxffbcvf/default-movie-portrait_EmJUj9Tda5wa.jpg?tr=fo-auto,di-';"
    />

    <div class='film-card__wrapper'>
      <h2 class='film-card__title'>{{title}} {{name}}</h2>
      <p class='film-card__discription'>
        <span class='film-card__genres'>{{genre_ids}}
          {{#each genres}} {{name}} {{/each}}
        </span>
        |
        <span class='film-card__release-date'>{{yearFixed release_date}}</span>
        <span class='card__vote_average'>{{numberFixed vote_average}}</span>
      </p>
    </div>

  </li>
{{/each}}